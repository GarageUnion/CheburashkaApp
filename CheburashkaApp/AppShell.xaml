<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CheburashkaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CheburashkaApp"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Поиск" Icon="search_icon">
            
            <ShellContent
                Title="Поиск"
                ContentTemplate="{DataTemplate local:SearchPage}"
                Route="Cheburashka"
                
            />
        </Tab>
        <Tab Title="Друзья" Icon="list_icon">
            <ShellContent
                Title="Мои друзья"
                Route="Cheburashka"
                ContentTemplate="{DataTemplate local:MyFriendsPage}"
            />
        </Tab>
        <Tab Title="Профиль" Icon="user_icon">
            <ShellContent
                Title="Мой профиль"
                ContentTemplate="{DataTemplate local:MyProfilePage}"
                Route="Cheburashka"
            />
        </Tab>
    </TabBar>
    

</Shell>
